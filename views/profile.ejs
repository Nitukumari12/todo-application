<%- include("particals/header")%>
<%- include("particals/nav")%>
  <div class="box">
    <h1 class="nox">Welcome in Todo</h1>
    <a href="/createtask">create Task</a>
  </div>
  <div class="todo">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">
                    <table class="table">
                        <thead class="thead">
                            <tr>
                                <th scope="col">Task_id</th>
                                <th scope="col">Name</th>
                                <th scope="col">Description</th>
                                <th scope="col">Due_Date</th>
                                
                                <th scope="col">Update</th>
                                <th scope="col">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% posts.forEach(function(post,idx){ %>
                                <tr>
                                    <th scope="row"><%=idx+1%></th>
                                    <td><%=post.name%></td>
                                    <td><%=post.description%></td>
                                    <td><%=post.due_date%></td>
                                    
                                    <td> <a href="/update/<%=post._id%>">Update</a></td>

                                    <td> <a href="/delete/<%=post._id%>">Delete</a> </td>
                                </tr>
                            <%})%>
                        </tbody>
                    </table>
                </th>
            </tr>
        </thead>

    </table>
  </div>

<%- include("particals/footer")%>